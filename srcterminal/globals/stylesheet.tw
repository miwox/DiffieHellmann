:: Story Stylesheet [stylesheet]

body {
	background: #000000;
	color: #00FF41;
	font-family: 'Matrix Code NFI', sans-serif;
	text-shadow: 0 0 0.3px #00FF41,0 0 1.5px #00FF41,0 0 1.5px #00FF41;
	blur(0.02rem)
}

div.terminal-message {
color: #FFFFFF;
font-family: 'Matrix Code NFI';
text-shadow: 0 0 1.5px #00FF41,0 0 2.5px #00FF41,0 0 2.5px #00FF41;
  blur(0.02rem)
  border: 1.5px solid #424949;
  vertical-align: center;
  padding: 10px;
  text-align: left;
  background: rgba(60, 60, 60, 0.4);
  margin-top: 30px;
  box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;
}